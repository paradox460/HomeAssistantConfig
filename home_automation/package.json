{
  "type": "module",
  "name": "home_automation",
  "version": "24.7.3",
  "homepage": "https://docs.digital-alchemy.app",
  "description": "Demonstration home automation project tuned for HAOS",
  "scripts": {
    "build": "./scripts/deploy.sh",
    "typecheck": "tsc --skipLibCheck --noEmit",
    "watch": "nodemon --exec tsx src/main.ts",
    "dev": "tsx src/main.ts",
    "format": "eslint --fix src/",
    "lint": "eslint src/",
    "rollback": "./scripts/rollback.sh",
    "type-writer": "npx type-writer",
    "upgrade": "./scripts/update_deps.sh",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "@digital-alchemy/automation": "^24.9.3",
    "@digital-alchemy/core": "^24.9.5",
    "@digital-alchemy/fastify-extension": "^24.9.1",
    "@digital-alchemy/hass": "^24.9.5",
    "@digital-alchemy/mqtt-extension": "^24.9.1",
    "@digital-alchemy/synapse": "^24.9.4",
    "better-sqlite3": "^11.3.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "tsc": "^2.0.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@digital-alchemy/type-writer": "^24.9.7",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.11.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "8.8.0",
    "@typescript-eslint/parser": "8.8.0",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "figlet-cli": "^0.1.1",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "lolcatjs": "^2.4.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsx": "^4.19.1",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "coveragePathIgnorePatterns": [
      "testing/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "setupFiles": [
      "<rootDir>/test-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json",
          "useESM": true
        }
      ]
    }
  },
  "packageManager": "yarn@4.4.0"
}
